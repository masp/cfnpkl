/// CIS Scan Configuration resource schema
extends ".../AWS/Resource.pkl"
Type = "AWS::InspectorV2::CisScanConfiguration"
Properties: Props?
class Props {
    /// Name of the scan
    ScanName: String(length >= 1)?
    SecurityLevel: "LEVEL_1" | "LEVEL_2" | *Null
    Schedule: Schedule?
    Targets: CisTargets?
    /// CIS Scan configuration unique identifier
    Arn: String?
    Tags: Mapping?
}
/// Choose a Schedule cadence
class Schedule {
    OneTime: Mapping?
    Daily: DailySchedule?
    Weekly: WeeklySchedule?
    Monthly: MonthlySchedule?
}
class DailySchedule {
    StartTime: Time
}
class Time {
    TimeOfDay: String(matches(Regex(#"^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"#)))
    TimeZone: String
}
class WeeklySchedule {
    StartTime: Time
    Days: Listing<"MON" | "TUE" | "WED" | "THU" | "FRI" | "SAT" | "SUN">
}
class MonthlySchedule {
    StartTime: Time
    Day: "MON" | "TUE" | "WED" | "THU" | "FRI" | "SAT" | "SUN"
}
class CisTargets {
    AccountIds: Listing<String(matches(Regex(#"^\d{12}|ALL_MEMBERS|SELF$"#)))>
    TargetResourceTags: Mapping?
}
