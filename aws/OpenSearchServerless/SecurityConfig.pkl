/// Amazon OpenSearchServerless security config resource
extends ".../AWS/Resource.pkl"
Type = "AWS::OpenSearchServerless::SecurityConfig"
Properties: Props?
class Props {
    /// Security config description
    Description: String(length <= 1000 && length >= 1)?
    /// The identifier of the security config
    Id: String(length <= 100 && length >= 1)?
    /// The friendly name of the security config
    Name: String(length <= 32 && length >= 3 && matches(Regex(#"^[a-z][a-z0-9-]{2,31}$"#)))?
    SamlOptions: SamlConfigOptions?
    Type: "saml" | *Null
}
/// Describes saml options in form of key value map
class SamlConfigOptions {
    /// The XML saml provider metadata document that you want to use
    Metadata: String(length <= 51200 && length >= 1 && matches(Regex(#"[\u0009\u000A\u000D\u0020-\u007E\u00A1-\u00FF]+"#)))
    /// Custom attribute for this saml integration
    UserAttribute: String(length <= 2048 && length >= 1 && matches(Regex(#"[\w+=,.@-]+"#)))?
    /// Group attribute for this saml integration
    GroupAttribute: String(length <= 2048 && length >= 1 && matches(Regex(#"[\w+=,.@-]+"#)))?
    /// Defines the session timeout in minutes
    SessionTimeout: Int?
}
