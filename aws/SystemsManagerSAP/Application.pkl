/// Resource schema for AWS::SystemsManagerSAP::Application
extends ".../AWS/Resource.pkl"
Type = "AWS::SystemsManagerSAP::Application"
Properties: Props?
class Props {
    ApplicationId: String(matches(Regex(#"[\w\d]{1,50}"#)))?
    ApplicationType: "HANA" | *Null
    /// The ARN of the Helix application
    Arn: String(matches(Regex(#"^arn:(.+:){2,4}.+$|^arn:(.+:){1,3}.+\/.+$"#)))?
    Credentials: Listing<Credential>?
    Instances: Listing<String(matches(Regex(#"^i-[\w\d]{8}$|^i-[\w\d]{17}$"#)))>?
    SapInstanceNumber: String(matches(Regex(#"[0-9]{2}"#)))?
    Sid: String(matches(Regex(#"[A-Z][A-Z0-9]{2}"#)))?
    /// The tags of a SystemsManagerSAP application.
    Tags: Listing<Tag>?
}
class Credential {
    DatabaseName: String(matches(Regex(#"^(?=.{1,100}$).*"#)))?
    CredentialType: "ADMIN" | *Null
    SecretId: String(matches(Regex(#"^(?=.{1,100}$).*"#)))?
}
/// A key-value pair to associate with a resource.
class Tag {
    /// The key name of the tag. You can specify a value that is 1 to 127
    /// Unicode characters in length and cannot be prefixed with aws:. You can
    /// use any of the following characters: the set of Unicode letters,
    /// digits, whitespace, _, ., /, =, +, and -.
    Key: String(length <= 128 && length >= 1)
    /// The value for the tag. You can specify a value that is 1 to 255
    /// Unicode characters in length and cannot be prefixed with aws:. You can
    /// use any of the following characters: the set of Unicode letters,
    /// digits, whitespace, _, ., /, =, +, and -.
    Value: String(length <= 256 && length >= 0)
}
